<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="magang_2018.aseangamesindonesianguide.content.ChatActivity">

    <include
        android:id="@+id/toolbar_chat_activity"
        layout="@layout/toolbar"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_item_chat"
        android:layout_below="@id/toolbar_chat_activity"
        android:layout_above="@id/linear_layout_add_chat_view"
        android:layout_marginLeft="8dp"
        android:scrollbars="none"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:dividerHeight="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/linear_layout_add_chat_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="#fff"
        android:layout_height="50dp">

        <magang_2018.aseangamesindonesianguide.customfonts.EditText_Roboto_Regular
            android:id="@+id/edit_text_new_chat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="@string/type_a_message"
            android:textColorHint="#ced5db"
            android:minWidth="250dp"
            android:maxWidth="250dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/action_send_new_chat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_send"
                android:layout_marginStart="20dp"
                android:tint="#d9d9d9"
                android:background="#00000000"
                android:contentDescription="@string/todo" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
