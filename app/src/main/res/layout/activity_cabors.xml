<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context="magang_2018.aseangamesindonesianguide.content.CaborsActivity">

    <include
        android:id="@+id/toolbar_cabors_activity"
        layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/image_view_detail"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <magang_2018.aseangamesindonesianguide.customfonts.TextView_Roboto_Regular
        android:id="@+id/text_view_creator_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Creator Name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <magang_2018.aseangamesindonesianguide.customfonts.TextView_Roboto_Regular
        android:id="@+id/text_view_like_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Description: "
        android:textSize="14sp" />

</LinearLayout>
